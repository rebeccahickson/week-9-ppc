<h1>New Party</h1>
<%= form_for @party do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :date %>
    <%= f.date_field :date %>
    <label for="category_id">Select a category:</label>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true%>
    <%= f.fields_for :category, @party.build_category do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>
    <label for="supply_ids">Select supplies:</label>
    <%= f.collection_check_boxes :supply_id, Supply.all, :id, :name, prompt: true%>
    <%= f.fields_for :supply, @party.supplies.build do |supplies_fields| %>
        <%= supplies_fields.text_field :name %>
    <% end %>
    <%= f.submit %>

<% end %>